<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.basicrpg.MainActivity">

    <TextView
        android:id="@+id/dungeonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="DungeonName" />

    <TextView
        android:id="@+id/dungeonLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonName"
        android:layout_margin="4dp"
        android:text="DungeonLocation" />

    <TextView
        android:id="@+id/roomDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonLocation"
        android:layout_margin="4dp"
        android:text="RoomDescription" />



    <ImageView
        android:id="@+id/dungeonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomDescription"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:contentDescription="View"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonImageView"
        android:layout_margin="4dp"
        android:onClick="buttonOneClick"
        android:text="ButtonOne" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonImageView"
        android:onClick="buttonTwoClick"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/buttonOne"
        android:text="ButtonTwo" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonThreeClick"
        android:layout_below="@+id/dungeonImageView"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/buttonTwo"
        android:text="ButtonThree" />

    <TextView
        android:id="@+id/characterStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonThree"
        android:layout_margin="4dp"
        android:text="CharacterStats" />

    <TextView
        android:id="@+id/characterInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterStats"
        android:layout_margin="4dp"
        android:text="CharacterInventory" />





</RelativeLayout>