<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.basicrpg.MainActivity">

    <TextView
        android:id="@+id/dungeonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:singleLine="false"
        android:text="DungeonName" />

    <TextView
        android:id="@+id/dungeonLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:maxLines="2"
        android:singleLine="false"
        android:text="DungeonLocation" />

    <TextView
        android:id="@+id/roomDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonLocation"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:isScrollContainer="true"
        android:maxLines="5"
        android:text="RoomDescription" />


    <ImageView
        android:id="@+id/dungeonImageView"
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:layout_below="@+id/roomDescription"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:contentDescription="View"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dungeonImageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:onClick="buttonOneClick"
        android:text="ButtonOne" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOne"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/buttonThree"
        android:onClick="buttonTwoClick"
        android:text="ButtonTwo" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOne"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:onClick="buttonThreeClick"
        android:text="ButtonThree" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonOne"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/buttonThree"
        android:onClick="buttonFourClick"
        android:text="ButtonFour" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTwo"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:onClick="buttonFiveClick"
        android:text="ButtonFive" />


    <TextView
        android:id="@+id/characterStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFive"
        android:layout_margin="1dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:maxLines="5"
        android:text="CharacterStats" />

    <TextView
        android:id="@+id/characterInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/characterStats"
        android:layout_margin="1dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:isScrollContainer="true"
        android:maxLines="5"
        android:text="CharacterInventory" />


</RelativeLayout>